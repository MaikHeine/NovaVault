<Window x:Class="NovaVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NovaVault" Height="450" Width="800">
    <DockPanel>
        <ListBox DockPanel.Dock="Left" SelectionChanged="OnTabSelectionChanged">
            <ListBoxItem Content="Overview"/>
            <ListBoxItem Content="Send"/>
            <ListBoxItem Content="Receive"/>
            <ListBoxItem Content="Transactions"/>
            <ListBoxItem Content="Market"/>
            <ListBoxItem Content="Settings"/>
        </ListBox>
        <ContentControl x:Name="ContentArea"/>
    </DockPanel>
</Window>
